<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsTrimmable>true</IsTrimmable>
    <VerifyReferenceTrimCompatibility>true</VerifyReferenceTrimCompatibility>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\twodog\twodog.csproj" />
    <ProjectReference Include="..\project\project.csproj" />
  </ItemGroup>

  <!-- For local development: skip native download and use local Godot build -->
  <PropertyGroup>
    <TwoDogSkipNativeDownload>true</TwoDogSkipNativeDownload>
    <GodotBinDir>$(MSBuildProjectDirectory)/../godot/bin/</GodotBinDir>
  </PropertyGroup>

  <!--
    Local development: Configuration-aware native library selection.
    
    - Debug: Uses editor dev build (debug features, expects Debug assemblies)
    - Release: Uses template_release build with LIBGODOT_HOSTFXR (optimized, uses system .NET SDK)
    
    The template_release build now uses hostfxr for .NET initialization (via LIBGODOT_HOSTFXR),
    which allows it to work with an existing .NET host application.
  -->
  
  <!-- Debug configuration: Use editor dev build -->
  <PropertyGroup Condition="'$(Configuration)' == 'Debug' Or '$(Configuration)' == ''">
    <TwoDogBuildType>editor</TwoDogBuildType>
    <TwoDogDevBuild>true</TwoDogDevBuild>
    <!-- Windows -->
    <TwoDogNativesLocalPath Condition="$([MSBuild]::IsOSPlatform('Windows'))">$(GodotBinDir)godot.windows.editor.dev.x86_64.shared_library.dll</TwoDogNativesLocalPath>
    <!-- Linux -->
    <TwoDogNativesLocalPath Condition="$([MSBuild]::IsOSPlatform('Linux'))">$(GodotBinDir)libgodot.linuxbsd.editor.dev.x86_64.shared_library.so</TwoDogNativesLocalPath>
    <!-- macOS -->
    <TwoDogNativesLocalPath Condition="$([MSBuild]::IsOSPlatform('OSX'))">$(GodotBinDir)libgodot.macos.editor.dev.x86_64.shared_library.dylib</TwoDogNativesLocalPath>
  </PropertyGroup>
  
  <!-- Release configuration: Use template_release build (with LIBGODOT_HOSTFXR) -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <TwoDogBuildType>template_release</TwoDogBuildType>
    <TwoDogDevBuild>false</TwoDogDevBuild>
    <!-- Windows -->
    <TwoDogNativesLocalPath Condition="$([MSBuild]::IsOSPlatform('Windows'))">$(GodotBinDir)godot.windows.template_release.x86_64.shared_library.dll</TwoDogNativesLocalPath>
    <!-- Linux -->
    <TwoDogNativesLocalPath Condition="$([MSBuild]::IsOSPlatform('Linux'))">$(GodotBinDir)libgodot.linuxbsd.template_release.x86_64.shared_library.so</TwoDogNativesLocalPath>
    <!-- macOS -->
    <TwoDogNativesLocalPath Condition="$([MSBuild]::IsOSPlatform('OSX'))">$(GodotBinDir)libgodot.macos.template_release.x86_64.shared_library.dylib</TwoDogNativesLocalPath>
  </PropertyGroup>

  <!-- Import twodog targets for GodotSharp API assembly copying -->
  <Import Project="..\twodog\build\twodog.targets" />

  <Target Name="DeepClean" AfterTargets="Clean">
    <RemoveDir Directories="$(BaseIntermediateOutputPath)" />
    <RemoveDir Directories="$(BaseOutputPath)" />
  </Target>
</Project>
