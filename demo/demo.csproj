<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsTrimmable>true</IsTrimmable>
    <VerifyReferenceTrimCompatibility>true</VerifyReferenceTrimCompatibility>
  </PropertyGroup>

  <!-- Package references for twodog -->
  <ItemGroup>
    <PackageReference Include="twodog" Version="0.1.0-pre" />
  </ItemGroup>

  <!-- Platform-specific native library packages (conditional on OS) -->
  <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <PackageReference Include="twodog.win-x64" Version="0.1.0-pre" />
  </ItemGroup>
  <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
    <PackageReference Include="twodog.linux-x64" Version="0.1.0-pre" />
  </ItemGroup>
  <ItemGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
    <PackageReference Include="twodog.osx-x64" Version="0.1.0-pre" />
  </ItemGroup>

  <!-- Game project reference (not a package) -->
  <ItemGroup>
    <ProjectReference Include="..\project\project.csproj" />
  </ItemGroup>

  <!--
    Note: When using packages, only Release mode works since packages
    contain template_release binaries. For Debug builds with editor.dev
    binaries, use ProjectReference to twodog instead.
  -->

  <Target Name="DeepClean" AfterTargets="Clean">
    <RemoveDir Directories="$(BaseIntermediateOutputPath)" />
    <RemoveDir Directories="$(BaseOutputPath)" />
  </Target>
</Project>
