<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsTrimmable>true</IsTrimmable>
        <VerifyReferenceTrimCompatibility>true</VerifyReferenceTrimCompatibility>
    </PropertyGroup>

    <ItemGroup>
        <!-- Reference the Godot C# API assemblies that will be built by the build process -->
        <Reference Include="GodotSharp">
            <HintPath>../godot/bin/GodotSharp/Api/Debug/GodotSharp.dll</HintPath>
            <Private>true</Private>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\project\project.csproj" />
    </ItemGroup>

</Project>

